template(bindable="router, state")
  ul.routes
    li
      a(href.bind="router.navigation[0].href")
        img(src="https://s3.amazonaws.com/freecodecamp/freecodecamp-logo-icon-square-400-400.png")
    li(repeat.for="nav of router.navigation" class="${nav.isActive ? 'active' : ''}" if.bind="nav.title !== 'User' ? true : state.login ? true : false")
      a(href.bind="nav.href") ${nav.title}
    li
      a(href="#/login") ${state.login !== null ? 'Log Out' : 'Log In'}