template
  #content.home-content
    #user-row
      #created(if.bind="state.login")
        .title User Created Polls
        ul
          li(repeat.for="poll of state.user.created | repeatlimit:0:5")
            a(route-href="route: poll; params.bind: { id: poll.id }")
              .canvas-wrapper
                canvas(id="created-canvas-${poll.id}" style="width: 100%; height: 100%")
              .poll-name ${poll.name}

      #participated(if.bind="state.login")
        .title User Participated Polls
        ul
          li(repeat.for="poll of state.user.participated | repeatlimit:0:5")
            a(route-href="route: poll; params.bind: { id: poll.id }")
              .canvas-wrapper
                canvas(id="participated-canvas-${poll.id}" style="width: 100%; height: 100%")
              .poll-name ${poll.name}

    #general-row
      #latest
        .title Latest Polls Created
        ul
          li(repeat.for="poll of state.polls | sortpolls:'date':'descending' | repeatlimit:0:5")
            a(route-href="route: poll; params.bind: { id: poll.id }")
              .canvas-wrapper
                canvas(id="latest-canvas-${poll.id}" style="width: 100%; height: 100%")
              .poll-name ${poll.name}

      #most
        .title Most Participated Polls
        ul
          li(repeat.for="poll of state.polls | sortpolls:'votes':'ascending' | repeatlimit:0:5")
            a(route-href="route: poll; params.bind: { id: poll.id }")
              .canvas-wrapper
                canvas(id="most-canvas-${poll.id}" style="width: 100%; height: 100%")
              .poll-name ${poll.name}